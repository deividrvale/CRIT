THEORY ints     ;
LOGIC QF_LIA    ;
SOLVER internal ;

SIGNATURE f, return ;

RULES
    even1(x) -> even11(x, 0, true) ;
    even11(x, i, b) -> even11(x, i + 1, false) [ i < x /\ b = true ] ;
    even11(x, i, b) -> even11(x, i + 1, true) [ i < x /\ b = false ] ;
    even11(x, i, b) -> return(b) [ i >= x ] ;

QUERY equivalence even1(2 * x) -><- return(true) ;

END OF FILE

