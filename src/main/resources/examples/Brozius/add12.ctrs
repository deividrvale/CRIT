THEORY ints     ;
LOGIC QF_LIA    ;
SOLVER internal ;

SIGNATURE add1, add2, return ;

RULES
    add1(x, y) -> add1(x - 1, y + 1) [ x > 0 ] ;
    add1(x, y) -> return(y) [ x = 0 ] ;
    add1(x, y) -> return(0) [ x < 0 ];
    add2(x, y) -> add2(x + 1, y - 1) [y > 0] ;
    add2(x, y) -> return(x) [ y = 0 ] ;
    add2(x, y) -> return(0) [ y < 0 ] ;

QUERY equivalence  add1(x,y) -><- add2(x, y) ;

END OF FILE

