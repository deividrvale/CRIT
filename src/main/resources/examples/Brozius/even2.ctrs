THEORY ints     ;
LOGIC QF_LIA    ;
SOLVER internal ;

SIGNATURE f, return ;

RULES
    even2(x) -> even22(x, true)
    even22(x, b) -> even22(x - 1, false) [ x > 0 /\ b = true ] ;
    even22(x, b) -> even22(x - 1, true) [ x > 0 /\ b = false ] ;
    even22(x, b) -> return(b) [ x <= 0 ] ;

QUERY equivalence even2(2 * x) -><- return(true) ;

END OF FILE

