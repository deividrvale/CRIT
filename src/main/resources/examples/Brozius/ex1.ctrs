THEORY ints     ;
LOGIC QF_LIA    ;
SOLVER internal ;

SIGNATURE f, return ;

RULES
    even(x) -> even2(x, true)
    even2(x, b) -> even2(x - 1, false) [ x > 0 /\ b = true ] ;
    even2(x, b) -> even2(x - 1, true) [ x > 0 /\ b = false ] ;
    even2(x, b) -> return(b) [ x <= 0 ] ;

QUERY equivalence even2(4, true) -><- return(true) ;

END OF FILE

