THEORY ints
LOGIC  QF_LIA
SOLVER internal
SIGNATURE

  sum      ;
  w        ;
  return ;


  sum1: Int => result;
  u_1: Int * Int => result;
  error: result;
  return: Int => result;
  u_2: Int * Int => result;
  u_3: Int * Int => result;
  u_4: Int * Int => result;
  u_5: Int * Int => result;
  u_6: Int * Int => result;

RULES

  sum(x)            -> return(0)         [x <= 0]       ;
  sum(x)            -> w(x, sum(x - 1))    [0 <= x - 1]   ;
  w(x, return(y)) -> return(x + y)                    ;


  sum1(n_1) -> u_1(n_1, rnd_1);
  u_1(n_1, sum_2) -> return(0)  [(n_1 < 0)];
  u_1(n_1, sum_2) -> u_2(n_1, 0)  [(n_1 >= 0)];
  u_2(n_1, sum_2) -> u_3(n_1, (sum_2 + n_1))  [(n_1 > 0)];
  u_3(n_1, sum_2) -> u_4(n_1, sum_2);
  u_4(n_1, sum_2) -> u_5(n_1, sum_2);
  u_5(n_1, sum_2) -> u_6((n_1 - 1), sum_2);
  u_6(n_1, sum_2) -> u_2(n_1, sum_2);
  u_2(n_1, sum_2) -> return(sum_2)  [(n_1 <= 0)];

QUERY  do-simplify [sum sum1] and equivalence sum(x) -><- sum1(x) [true]

