THEORY ints
LOGIC  QF_LIA
SOLVER internal

SIGNATURE
  error : result ;
  g1 : Int => result ;
  g2 : Int * Int => result ;
  return : Int => result ;
  return : Int => result ;
  u_4 : Int * result => result ;
  u_12 : result => result ;
  !INTEGER : Int ;

RULES
  g1(n) -> return(0) [n <= 0] ;
  g1(n) -> u_4(n, g1(n - 1)) [n > 0] ;
  u_4(n, return(w_1)) -> return(w_1 + n) ;
  u_4(n, error) -> error ;
  g2(n, s) -> return(s) [n <= 0] ;
  g2(n, s) -> u_12(g2(n - 1, n + s)) [n > 0] ;
  u_12(return(w_2)) -> return(w_2) ;
  u_12(error) -> error ;

QUERY equivalence g1(x) -><- g2(x, 0) [true]

END OF FILE

